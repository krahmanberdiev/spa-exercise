extends layout

block content
  h1= title
  p Welcome to our breviews test

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        strong Gender:
        |  <span id='userInfoGender'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
    // /USER INFO

    // USER LIST
    h2 User Review List
    #userList
      table
        thead
          th Full Name
          th Review
          th Delete?
        tbody
    // /USER LIST

    // ADD COMMENT
    h2 Add Review
    #addUser
      fieldset
        //- input#inputUserName(type='text', placeholder='Username')
        //- input#inputUserEmail(type='text', placeholder='Email')
        //- br
        input#inputUserFullname(type='text', placeholder='Full Name*')
        input#inputUserAge(type='text', placeholder='Age*')
        br
        input#inputUserLocation(type='text', placeholder='Location*')
        input#inputUserGender(type='text', placeholder='gender*')
        br
        textarea#userReview(name="user-review" placeholder="Your review...")
        br
        button#btnAddComment Add Comment
    // /ADD USER

  // /WRAPPER